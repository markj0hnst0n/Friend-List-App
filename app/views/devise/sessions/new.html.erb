<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control my-2", placeholder: "Email" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control my-2", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me, class:"my-2" %>
      <%= f.label :remember_me%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log In", class:"btn btn-secondary my-1"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
